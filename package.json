{
  "name": "othello-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "cd packages/othello-react && bun run dev",
    "build": "cd packages/othello-engine && bun run build && cd ../othello-react && bun run build",
    "test": "bun run test:engine && bun run test:react:ci",
    "test:engine": "cd packages/othello-engine && bun run test",
    "test:react": "cd packages/othello-react && bun run test",
    "test:react:ci": "cd packages/othello-react && vitest run",
    "test:coverage": "bun run test:engine --coverage && bun run test:react --coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "cd packages/othello-react && bun run type-check && cd ../othello-engine && bun run type-check",
    "validate": "bun run format:check && bun run lint && bun run test",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "prettier": "^3.6.2"
  }
}
